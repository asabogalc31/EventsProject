<div class="container">    
            
    <div style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Información evento</div>
            </div>  
            <div class="panel-body" >
                <%= form_tag api_event_path, method: :patch do %>
                    <div id="div_id_event" class="form-group required">
                        <%=  label_tag 'Nombre evento', nil, class:'control-label col-md-6' %><%=  text_field_tag :event_name, @event.event_name %><br/>
                        <%=  label_tag 'Categoría', nil, class:'control-label col-md-6' %><%= select_tag(:event_category, raw('<option value="1">Conferencia</option><option value="2">Seminario</option><option value="3">Congreso</option><option value="4">Curso</option>')) %><br/>
                        <%=  label_tag 'Tipo de evento', nil, class:'control-label col-md-6' %><%= select_tag(:event_type, raw('<option value="1">Virtual</option><option value="2">Presencial</option>')) %><br/>
                        <%=  label_tag 'Lugar',nil, class: 'control-label col-md-6' %><%=  text_field_tag :event_place, @event.event_place %><br/>
                        <%=  label_tag 'Dirección', nil, class: 'control-label col-md-6' %><%=  text_field_tag :event_address, @event.event_address %><br/>
                        <%=  label_tag 'Fecha de inicio', nil, class: 'control-label col-md-6' %><%=  date_field_tag :event_initial_date, @event.event_initial_date %><br/>
                        <%=  label_tag 'Fecha final', nil, class: 'control-label col-md-6' %><%=  date_field_tag :event_final_date, @event.event_final_date %><br/>
                        <%=  label_tag 'Thumbnail', nil, class: 'control-label col-md-6' %><%=  file_field_tag :thumbnail %><br/><br/>
                        <div><%= submit_tag 'Actualizar', class: 'control-label' %></div>
                    </div>
                <% end %>
            </div>
        </div>
    </div> 
</div>