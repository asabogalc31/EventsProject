<div class="container">    
            
    <div style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Información evento</div>
            </div>  
            <div class="panel-body" >
                <form method="post" action=".">                            

                    <form  class="form-horizontal" method="post" >
                        <div id="div_id_username" class="form-group required">
                            <% @event.each do |event| %>
                                    <label class="control-label col-md-6"><b> Nombre de evento: </b></label>
                                    <label class="control-label"> <%=event.event_name%> </label>
                                    <br/>
                                    <label class="control-label col-md-6"><b> Categoría:</b></label>
                                    <label class="control-label"> <%=event.event_category%> </label>
                                    <br/>
                                    <label class="control-label col-md-6"><b> Tipo de evento: </b></label>
                                    <label class="control-label"> <%=event.event_type%> </label>
                                    <br/>
                                    <label class="control-label col-md-6"><b> Lugar: </b></label>
                                    <label class="control-label "> <%=event.event_place%> </label>
                                    <br/>
                                    <label class="control-label col-md-6"><b> Dirección:</b></label>
                                    <label class="control-label"> <%=event.event_address%> </label>
                                    <br/>
                                    <label class="control-label col-md-6"><b> Fecha inicial:</b></label>
                                    <label class="control-label"> <%=event.event_initial_date%> </label>
                                    <br/>
                                    <label class="control-label col-md-6"><b> Fecha final:</b></label>
                                    <label class="control-label"> <%=event.event_final_date%> </label>
                                    <br/>
                                    <label class="control-label col-md-6"><b> Thumbnail:</b></label>
                                    <label class="control-label"> <%=event.thumbnail%> </label>
                            <% end %>                            
                        </div>
                    </form>

                </form>
            </div>
        </div>
    </div> 
</div>